<children>
    <AnchorPane>
        <children>
            <VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="322.0" prefWidth="604.0">
                <children>
                    <TextField fx:id="userIdField" prefHeight="37.0" prefWidth="498.0" promptText="ID de l'utilisateur">
                        <VBox.margin>
                            <Insets left="50.0" right="50.0" top="70.0" />
                        </VBox.margin>
                    </TextField>
                    <HBox prefHeight="89.0" prefWidth="604.0">
                        <opaqueInsets>
                            <Insets />
                        </opaqueInsets>
                        <VBox.margin>
                            <Insets top="20.0" />
                        </VBox.margin>
                        <children>
                            <JFXButton fx:id="searchButton" alignment="CENTER" contentDisplay="CENTER" prefHeight="65.0" prefWidth="127.0" text="Rechercher" onAction="#handleConfirm">
